 struct Student{
        char name[40];
        char gender[4];
        float marks;
    };

struct Student read_data()
{
    int i,j=0;
    struct Student data;
    char fname[20],lname[20];
    scanf("%s",fname);
    scanf("%s",lname);
    i=0;
    while (fname[i]!='\0')
    {
        data.name[j]=fname[i];
        i++;
        j++;
    }
    data.name[j++]=' ';
    i=0;
    while (lname[i]!='\0')
    {
        data.name[j]=lname[i];
        i++;
        j++;
    }
    data.name[j]='\0';
    scanf("%s",data.gender);
    scanf("%f",&data.marks);
    return data;
}

void print_data(struct Student A[], int num)
{
    int i;
    printf("\nPrinting the Student records :");
    for (i=0;i<num;i++){
        printf("\n");
        printf("%s %s %f",(A[i].name),(A[i].gender),A[i].marks);
    }
}

struct Student best_girl(struct Student A[],int num)
{
    int i,ind[num],j,len=0;
    float max=0;
    for (i=0;i<num;i++){
        if (A[i].gender[0]=='G' || A[i].gender[0]=='g'){
            if (A[i].gender[1]=='i' && A[i].gender[2]=='r' && A[i].gender[3]=='l'){
                if ((A[i].marks)>=max){max=A[i].marks;ind[len++]=i;}
                printf("%d",ind);
            }
        }
    }
    printf("\nBest Girl Student(or Students) : ");
    printf("%s ",A[ind[0]].name);
    for (i=1;i<len-1;i++) printf(", %s",A[ind[i]].name);
    printf("& %s",A[ind[len-1]].name);
}

int main()
{
    int i,n;
    printf("Enter the number of students : ");
    scanf("%d",&n);
    while (n<1 || n>100){
        if (n<1) printf("Enter a valid number : ");
        else if (n>100) printf("Out of Range, enter any value < 100 : ");
        scanf("%d",&n);
    }
    struct Student data[n];
    printf("Enter the Student Details : \n");
    for (i=0;i<n;i++) data[i]=read_data();
    print_data(data,n);
    best_girl(data,n);
}
