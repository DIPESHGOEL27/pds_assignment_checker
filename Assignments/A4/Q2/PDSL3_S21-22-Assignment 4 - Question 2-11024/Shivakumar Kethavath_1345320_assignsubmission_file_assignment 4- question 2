#include <stdio.h>
// Recursive function print all combinations of numbers from `1` to `m`
// have the sum `k`.

int myHostelChangingTrip(int pos, int left,
                         int n, int L, int R)
{
    if (pos == n)
    {
    if (left == 0)
            return 1;
        else
            return 0;
    }
    if (left == 0)
        return 0;
    int answer = 0;
    for (int i = L; i <= R; i++)
    {
        if (i > left)
            break;
        // if sum becomes `k`, print the combination
        answerS=(answer + myHostelChangingTrip(pos + 1,
                                                left - i, n, L, R));
    }
          return answer;
}

int main()
{
int x, y, z, i = 1;
    printf("Enter x = ");
    scanf("%d", &X);
    printf("Enter y= ");
    scanf("%d", &Y);
    printf("Enter z = ");
    scanf("%d", &Z);
    // print all combinations of numbers from 1 to `Z` having sum `Y`
    printf(" NO OF TRIPS=%d\n", myHostelChangingTrip(0, Y, X, i, Z));
    return 0;
}
