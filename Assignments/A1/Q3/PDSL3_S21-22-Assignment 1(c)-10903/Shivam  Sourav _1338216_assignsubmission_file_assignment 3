#include <stdio.h>
void main()
{
int m,d,b,k;
float a,f;
printf("enter the no.of available machines");
scanf("%d",&m);
printf("enter the day number (1-7)");
scanf("%d",&d);
switch(d)
{
case (1):
{
    printf("no. of cars manufactured =%d",m);
    break;
}
case (2):
{
    a=m+m/2.0+m/4.0;
    b=m+m/2+m/4;
    if ((a-b)<0.5)
    printf("no. of cars manufactured =%d",b);
    else
    printf("no. of cars manufactured =%d",b+1);
    break;
}
case(3):
case(6):
{
    printf("enter k");
    scanf("%d",&k);
     a=m-k+(m-k)/2.0+(m-k)/4.0;
     b=m-k+(m-k)/2+(m-k)/4;
     if ((a-b)<0.5)
     printf("no. of cars manufactured =%d",b);
     else
     printf("no.of cars manufactured +%d",b+1);
     break;
}
case (4):
case(5):
case(7):
{
    printf("enter the boosting fraction");
    scanf("%f",&f);
    a=m+m*f;
    int b=a;
    if((a-b)<0.5)
    printf("no. of cars manufactured=%d",b);
    else 
    printf("no. of cars manufactured =%d",b+1);
    break;
}
}
}