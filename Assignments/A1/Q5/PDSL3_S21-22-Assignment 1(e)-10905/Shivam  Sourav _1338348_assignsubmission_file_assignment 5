#include <stdio.h>
void main()
{float q,bp;
char w;
printf("press n for natural and s for synthetic wood");
scanf("%c",&w);
printf("enter the weight");
scanf("%f",&q);
if (w=='n')
{
bp=1100.00*q;
printf("base price =%f",bp);
printf("GST =%f",0.20*bp);
printf("total price =%f",bp+bp*0.20);
}
else if (w=='s')
{
    bp=780.00*q;
    printf("base price =%f",bp);
    printf("GST=%f",0.15*bp);
    printf("total price",bp+0.15*bp);
}
}
